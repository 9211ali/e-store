<div id="<%= dom_id product %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= product.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= product.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= product.category&.name %>
  </p>

  <p>
  <strong class="block font-medium mb-1">Images List</strong>
  </p>
  <% if product.images.any? %>
    <% product.images.each do |image| %>
      <%= image_tag(image, class: "w-20 h-20 inline-block m-2") %>
    <% end %>
  <% else %>
    <span>Oop! No pictures available!</span>
  <% end %>
</div>
